@{
    ViewData["Title"] = "Games By Continent";
}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div class="text-center">
    <h1 class="display-4">Ryan Collicutt (A00888552)</h1>
    


<div id="pie_chart_div"></div>

<script type="text/javascript">
    google.charts.load('current', {
        packages: ['corechart', 'bar']
    });

    google.setOnLoadCallback(drawChart);

    function drawChart() {
        var jsonData = $.ajax({
            // /Controller/Method
            url: '/Charts/ChartData',
            dataType: "json",
            async: false
        }).responseText;
        PopulationChart(jsonData, "pie-chart");
    }

    function PopulationChart(jsonData, chart_type) {
        // Create our data table out of JSON data loaded from server.
        var data = new google.visualization.DataTable(jsonData);
        var chart = new google.visualization.PieChart(document.getElementById('pie_chart_div'));
        var options =  {title: 'Games by continent', width: 800, height: 500};
        chart.draw(data, options);
        return false;
    }

</script>
</div>